<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.mapper.StudentMapper">
    <insert id="insert">
        insert into student (name,no,clazz_id,gender,phone,id_card,is_college, degree,address,graduation_Date,violation_count,violation_score,update_time)
        values (#{name},#{no},#{clazzId},#{gender},#{phone},#{idCard},#{isCollege},#{degree},#{address},#{graduationDate},#{violationCount},#{violationScore},#{updateTime})
    </insert>
    <delete id="deleteByIds">
        delete from student where id in
        <foreach item="id" collection="list" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>
    <select id="countClazzStuData" resultType="java.util.Map">
        select
            c.name,
            count(s.id) value
            from clazz c left join student s on c.id = s.clazz_id
        group by c.id,c.name
        order by value desc
    </select>
    <select id="list" resultType="com.itheima.pojo.Student">
        select
            s.name, s.no, c.name as clazzName , s.gender, s.phone,
            s.degree , s.violation_count, s.violation_score,s.update_time
        from student s left join clazz c
        on s.clazz_id = c.id
        <where>
            <!--    动态SQL    -->
            <if test="name!=null and name!=''">
                s.name like concat('%',#{name},'%')
            </if>
            <if test="degree!=null">
                and s.degree = #{degree}
            </if>
            <if test="classId!=null">
                and s.clazz_id = #{classId}
            </if>
        </where>order by c.update_time desc
    </select>
</mapper>